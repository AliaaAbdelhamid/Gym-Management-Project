@model MemberViewModel
@{
    ViewData["Title"] = "Delete Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-5 shadow text-center">
                <div class="mb-4">
                    <img src="~/images/@Model.Photo"
                         alt="@Model.Name"
                         class="rounded-circle mb-3"
                         style="width: 100px; height: 100px; object-fit: cover;" />
                    <h4 class="text-primary-color mb-2">@Model.Name</h4>
                </div>

                <p class="fs-3 text-primary-color mb-4">Are you sure you want to delete this member?</p>

                <div class="alert alert-warning text-start" role="alert">
                    <strong>Warning!</strong> This action cannot be undone. All member data will be permanently deleted.
                </div>

                <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" readonly />
                    <div class="buttons d-flex justify-content-between gap-3">
                        <a asp-controller="Member" asp-action="Index" class="btn-outline flex-fill">NO</a>
                        <button type="submit" class="btn-fill flex-fill">Yes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>